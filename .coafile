[all]
ignore = .tox/**,
    .git/**,
    .gitignore,
    .gitreview,
    **.log,
    **.sw?,
    **.orig,

[all.git]
bears = GitCommitBear
ignore_length_regex = Signed-off-by,
    Also-by,
    Co-authored-by,
    http://,
    https://

[all.spacing]
bears = SpaceConsistencyBear
use_spaces = True
enforce_newline_at_EOF = False
files = **

[all.markdown]
bears = MarkdownBear
files = **.md
